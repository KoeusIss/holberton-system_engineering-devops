#!/usr/bin/env bash
# Creates an nginx web sever
apt-get update
apt-get install -y nginx
mkdir /var/www/html/koeusiss/html
chown -R "$USER":"$USER" /var/www/koeusiss/html
chmod -R 755 /var/www

echo "Holberton School" > /var/www/koeusiss/html/index.html

printf %s "server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name koeusiss.tech www.kouesiss.tech;

    root   /var/www/koeusiss/html;
    index  index.html index.htm;
}" > /etc/nginx/sites-available/koeusiss.tech

sudo ln -s /etc/nginx/sites-available/koeusiss.tech /etc/nginx/sites-enabled/

service nginx restart
